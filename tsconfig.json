    "outDir": "./lib",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "exclude": ["node_modules/**/*", "**/*.test.ts"],
  "include": ["src/main.ts"]
}